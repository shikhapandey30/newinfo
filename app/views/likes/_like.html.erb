<div id= "like_<%= product.class.name %>_<%= product.id %>"> 
  <!--Like-->
	(<%=count_like(product)%>)
	<% if current_user.is_liked(product) %>
	<%= link_to "liked", like_create_path(id: product.id, type: product.class.name), method: :post, remote: true %>
	<%else%>
			<%= link_to "like", like_create_path(id: product.id, type: product.class.name), method: :post, remote: true, class: "fa fa-thumbs-up" %>
			<%end%>
			<i class="fa fa-thumbs-up"></i>


	<!--dislike-->
	<br/>
	<% if current_user.is_disliked(product) %>
		<%= link_to "Disliked", dislike_create_path(id: product.id, type: product.class.name), method: :post, remote: true %>
				<%else%>
				<%= link_to "Dislike", dislike_create_path(id: product.id, type: product.class.name), method: :post, remote: true, class: "btn btn-primary" %>
			<%end%>

</div>